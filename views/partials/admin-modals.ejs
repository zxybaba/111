<!-- 确认删除模态框 -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">确认删除</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="deleteConfirmMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">确认删除</button>
            </div>
        </div>
    </div>
</div>

<!-- 添加城市模态框 -->
<div class="modal fade" id="addCityModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">添加城市</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addCityForm">
                    <div class="form-group">
                        <label for="cityName">城市名称</label>
                        <input type="text" class="form-control" id="cityName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" onclick="submitAddCity()">添加</button>
            </div>
        </div>
    </div>
</div>

<!-- 添加景点模态框 -->
<div class="modal fade" id="addAttractionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">添加景点</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addAttractionForm">
                    <div class="form-group">
                        <label for="attractionName">景点名称</label>
                        <input type="text" class="form-control" id="attractionName" required>
                    </div>
                    <div class="form-group">
                        <label for="citySelect">所属城市</label>
                        <select class="form-control" id="citySelect" required>
                            <% cities.forEach(city => { %>
                            <option value="<%= city.city_id %>"><%= city.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="attractionDescription">景点描述</label>
                        <textarea class="form-control" id="attractionDescription" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" onclick="submitAddAttraction()">添加</button>
            </div>
        </div>
    </div>
</div>

